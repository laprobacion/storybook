<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/addLessonNarrativeParent"
    tools:context="com.read.storybook.AddLessonNarrativeActivity">

    <TextView
        android:id="@+id/addStoryErrMsg"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:text="TextView" />

    <TextView
        android:id="@+id/filename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="filename"
        android:layout_alignBaseline="@+id/saveStoryAddBtn"
        android:layout_alignBottom="@+id/saveStoryAddBtn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btnAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:layout_marginTop="31dp"
        android:text="Upload Image" />

    <Button
        android:id="@+id/saveStoryAddBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/addStoryName"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="Save" />


</RelativeLayout>
