<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.read.storybook.AdminActivity">

    <Button
        android:id="@+id/btnUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:text="Update"
        android:textAllCaps="false"
        android:layout_marginStart="160dp"
        android:layout_below="@+id/usernameTxt"
        android:layout_alignBottom="@+id/isAdminCheckBox" />

    <TextView
        android:id="@+id/msg"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <EditText
        android:id="@+id/usernameTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="62dp" />

    <Button
        android:id="@+id/btnSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        android:layout_marginStart="20dp"
        android:layout_alignBottom="@+id/usernameTxt"
        android:layout_toEndOf="@+id/usernameTxt" />

    <CheckBox
        android:id="@+id/isAdminCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Is Admin"
        android:layout_below="@+id/usernameTxt"
        android:layout_alignParentStart="true"
        android:layout_marginStart="60dp" />
</RelativeLayout>
